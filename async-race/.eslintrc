{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "no-shadow": "off",
      "no-plusplus": "off",
      "no-console": "warn",
      "max-len": ["warn", { "code": 128 }],
      "indent": ["warn", 2, {
        "SwitchCase": 1
      }],
      "@typescript-eslint/indent": ["warn", 2, {
        "SwitchCase": 1
      }],
      "import/prefer-default-export": "error",
      "no-param-reassign": ["error", {
        "props": false
      }]
    }
}
